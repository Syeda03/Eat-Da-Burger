  <header>Eat-Da-Burger!</header>
  <br>
  <img id="hamburger-image" src="assets/img/burger_image.png" alt="Burger image.">
  <br>

</div>

<div class="container">
  <section id="available-hamburgers">
    <ul id="burger-list">
      {{#each burgers}}
        {{#unless this.devoured}}
          <li class="available-burger">
            <span class="burgers">
              {{this.id}}
              {{this.burger_name}}
            </span>
            <span id="devour-button">
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn btn-danger" type="submit">Eat it!</button>
              </form>
            </span>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </section>
  <section id="devoured-hamburgers">
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li class="devour-burger">
            {{this.id}}
            {{this.burger_name}}
            {{!-- <span id="delete-button">
              <form action="/{{this.id}}?_method=DELETE" method="DELETE">
                <input type="hidden" name="DELETE" value="true">
                <button class="delete-button" type="submit">Delete it!</button>
              </form>
            </span> --}}
          </li>
        {{/if}}
      {{/each}}
      
    </ul>
  </section>
  <section id ="new-burger">
    <form class="create-update-form" action="/" method="POST">

      <div class="form-group">
        <p>Enter a burger you want to eat. Click the "Submit" button.</p>
        <textarea id="new-burger-text" rows="4" name="burger_name"></textarea>
      </div>

      <button class="btn btn-danger" style= "margin-left:38%" type="submit">Add Burger</button>
    </form>

    

  </section>
</div>
